#include <iostream>
#include<cmath>
using namespace std;
int main() {
    int ar[3],i;
    float d,x,y,s,a,b,c,z;
    cout<<"entetr the coefficient of quadratic equation x^2,x then constant term:";
    for(i=0;i<3;i++){
        cin>>ar[i];
    }
    cout<<"your x^2 coefficient x coefficeient and constant term are:"<<endl;
    for(i=0;i<3;i++){
        cout<<ar[i]<<"\t";
    }
    d=pow(ar[1],2)-4*ar[0]*ar[2];
    s=pow(d,0.5);
    if(d>0){
        x=(-ar[1]+s)/(2*ar[0]);
        y=(-ar[1]-s)/(2*ar[0]);
    }
    else{
        cout<<"no real roots";
    }
    cout<<endl<<"the solutions are:"<<x<<endl;
    cout<<"the solutions are:"<<y<<endl;
    for(i=0;i<3;i++){
        a=ar[0];
        b=ar[1];
        c=ar[2];
    }
    cout<<"your quadratic equation is"<<a<<"x^2+"<<b<<"x+"<<c;
    cout<<"enter the value of x:";
    cin>>x;
    cout<<"answer of quadratic equation is:"<<a*pow(x,2)+b*x+c;
    return 0;
}
// Online C++ compiler to run C++ program online
#include <iostream>
using namespace std;
int main() {
    int s1,s2,i,j;
    cout<<"enter the length of a1:";
    cin>>s1;
    int a1[s1];
    cout<<"enter the length of a2:";
    cin>>s2;
    int a2[s2];
    for (i=0;i<s1;i++){
        cout<<"enter the elements of a1:";
        cin>>a1[i];
    }
    for (i=0;i<s1;i++){
        cout<<"enter the elements of a2:";
        cin>>a2[i];
    }
    i=s1;
    s1=s1+s2;
    for(j=0;j<s2;j++){
        a1[i]=a2[j];
        i++;
    }
    cout<<"after merging\n";
    for (int a=0;a<s1;a++){
        cout<<a1[a]<<"\t";
    } 
    return 0;
}