#include <iostream>
#include<cmath>
using namespace std;
int main() {
    int ar[3],i;
    float d,x,y,s,a,b,c,z;
    cout<<"entetr the coefficient of quadratic equation x^2,x then constant term:";
    for(i=0;i<3;i++){
        cin>>ar[i];
    }
    cout<<"your x^2 coefficient x coefficeient and constant term are:"<<endl;
    for(i=0;i<3;i++){
        cout<<ar[i]<<"\t";
    }
    d=pow(ar[1],2)-4*ar[0]*ar[2];
    s=pow(d,0.5);
    if(d>0){
        x=(-ar[1]+s)/(2*ar[0]);
        y=(-ar[1]-s)/(2*ar[0]);
    }
    else{
        cout<<"no real roots";
    }
    cout<<endl<<"the solutions are:"<<x<<endl;
    cout<<"the solutions are:"<<y<<endl;
    for(i=0;i<3;i++){
        a=ar[0];
        b=ar[1];
        c=ar[2];
    }
    cout<<"your quadratic equation is"<<a<<"x^2+"<<b<<"x+"<<c;
    cout<<"enter the value of x:";
    cin>>x;
    cout<<"answer of quadratic equation is:"<<a*pow(x,2)+b*x+c;
    return 0;
}

#include <iostream>
using namespace std;
int l=0,m,h,se,f,flag;
int binar(int ar[],int se,int m,int h){
    if(l<=h){
        if (se==ar[m]){
            flag=1;
            return flag;
        }
        if(se>ar[m]){
            l=m+1;
            m=(l+h)/2;
        }
        if(se<ar[m]){
            h=m-1;
            m=(h+1)/2;
        }
    }
    else{
        flag=0;
        return flag;
    }
    return binar(ar,se,m,h);
}
    int main(){
        int n,i,se;
        cout<<"enter the length of array:";
        cin>>n;
        int ar[n];
        cout<<"entet the sorted array:";
        for( i=0;i<n;i++){
            cin>>ar[i];
        }
        h=n-1;
        m=(l+h)/2;
        cout<<"enter the element you want to search:";
        cin>>se;
        f=binar(ar,se,m,h); // this is function calling
        if(f==1){
            cout<<"Your searching element is present in the array";
        }
        else{
            cout<<"its not present";
        }
    }