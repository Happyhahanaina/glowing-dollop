#include <iostream>
using namespace std;
#define n 100
int main() {
  int a[n][n],lines;
  cout<<"how many lines you want in the pattern:";
  cin>>lines;
  for(int i=0;i<lines;i++){
      for(int j=0;j<=i;j++){
          if(j==i||j==0){
              a[i][j]=1;
              cout<<a[i][j]<<" ";
          }
          else
             {
              a[i][j]=a[i-1][j-1]+a[i-1][j];
              cout<<a[i][j]<<" ";
             }
      }
      cout<<endl;
  }

    return 0;
}
#include <iostream>
using namespace std;
int main() {
    string s="*";
    string b="*";
    for(int i=0;i<5;i++){
        cout<<s<<endl;
        s+=b;
    };

    return 0;
}
